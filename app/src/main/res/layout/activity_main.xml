<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mlf.testcounterwithicon.PoisonCounter
        android:id="@+id/textViewLife"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFEB3B"
        android:gravity="center_horizontal|center_vertical"
        android:text="40"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mlf.testcounterwithicon.PoisonCounter
        android:id="@+id/textViewPoison"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#B325DA"
        android:gravity="center_horizontal|center_vertical"
        android:text="40"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        app:layout_constraintStart_toStartOf="@+id/textViewLife"
        app:layout_constraintTop_toBottomOf="@+id/textViewLife" />
 />

</androidx.constraintlayout.widget.ConstraintLayout>
